<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/card_controller_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/btn_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/function_type"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/define_function"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/function6"
        app:layout_constraintEnd_toStartOf="@+id/function2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/function_type"
        app:srcCompat="@drawable/ic_function_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function1"
        app:layout_constraintTop_toTopOf="@id/function1"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/function7"
        app:layout_constraintEnd_toStartOf="@+id/function3"
        app:layout_constraintStart_toEndOf="@id/function1"
        app:layout_constraintTop_toBottomOf="@id/function_type"
        app:srcCompat="@drawable/ic_function_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function2"
        app:layout_constraintTop_toTopOf="@id/function2"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/function8"
        app:layout_constraintEnd_toStartOf="@+id/function4"
        app:layout_constraintStart_toEndOf="@id/function2"
        app:layout_constraintTop_toBottomOf="@id/function_type"
        app:srcCompat="@drawable/ic_function_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function3"
        app:layout_constraintTop_toTopOf="@id/function3"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/function9"
        app:layout_constraintEnd_toStartOf="@+id/function5"
        app:layout_constraintStart_toEndOf="@id/function3"
        app:layout_constraintTop_toBottomOf="@id/function_type"
        app:srcCompat="@drawable/ic_function_4" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function4"
        app:layout_constraintTop_toTopOf="@id/function4"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/function10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/function4"
        app:layout_constraintTop_toBottomOf="@id/function_type"
        app:srcCompat="@drawable/ic_function_5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function5"
        app:layout_constraintTop_toTopOf="@id/function5"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/function7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/function1"
        app:srcCompat="@drawable/ic_function_6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function6"
        app:layout_constraintTop_toTopOf="@id/function6"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/function8"
        app:layout_constraintStart_toEndOf="@id/function6"
        app:layout_constraintTop_toBottomOf="@id/function2"
        app:srcCompat="@drawable/ic_function_7" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function7"
        app:layout_constraintTop_toTopOf="@id/function7"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/function9"
        app:layout_constraintStart_toEndOf="@id/function7"
        app:layout_constraintTop_toBottomOf="@id/function3"
        app:srcCompat="@drawable/ic_function_8" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function8"
        app:layout_constraintTop_toTopOf="@id/function8"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/function10"
        app:layout_constraintStart_toEndOf="@id/function8"
        app:layout_constraintTop_toBottomOf="@id/function4"
        app:srcCompat="@drawable/ic_function_9" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function9"
        app:layout_constraintTop_toTopOf="@id/function9"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/function9"
        app:layout_constraintTop_toBottomOf="@id/function5"
        app:srcCompat="@drawable/ic_function_10" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/function_selected_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/function10"
        app:layout_constraintTop_toTopOf="@id/function10"
        app:srcCompat="@drawable/ic_selected"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>