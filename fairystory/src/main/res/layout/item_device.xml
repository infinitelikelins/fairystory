<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/white_bg">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/im_bl_item_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/settings_bluetooth_icon" />

    <TextView
        android:id="@+id/tv_bl_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/im_bl_item_icon"
        android:layout_marginStart="10dp"
        android:textColor="#ff1c96d2"
        android:textSize="15sp" />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/im_bl_item_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/bluetooth_bong_state_bg"
        android:visibility="gone"/>

</RelativeLayout>