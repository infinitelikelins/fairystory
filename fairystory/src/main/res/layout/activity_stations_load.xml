<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/station_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/station_pink_selector"
        app:layout_constraintBottom_toBottomOf="@+id/btnStation6"
        app:layout_constraintEnd_toStartOf="@+id/btnStation3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/btnStation6"
        app:layout_constraintTop_toTopOf="@+id/btnStation6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_green_selector"
        app:layout_constraintBottom_toBottomOf="@+id/btnStation6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/btnStation2"
        app:layout_constraintTop_toTopOf="@+id/btnStation6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/station_purple_selector"
        app:layout_constraintBottom_toTopOf="@+id/btnPerform"
        app:layout_constraintEnd_toEndOf="@+id/btnStation6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnStation6"
        app:layout_constraintTop_toBottomOf="@+id/btnStation6"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_red_selector"
        app:layout_constraintBottom_toBottomOf="@+id/btnStation4"
        app:layout_constraintEnd_toEndOf="@+id/btnStation2"
        app:layout_constraintStart_toStartOf="@+id/btnStation2" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/station_yellow_selector"
        app:layout_constraintBottom_toTopOf="@+id/btnStation4"
        app:layout_constraintEnd_toStartOf="@+id/btnStation2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnStation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/station_blue_selector"
        app:layout_constraintBottom_toBottomOf="@+id/btnStation4"
        app:layout_constraintEnd_toEndOf="@+id/btnStation3"
        app:layout_constraintStart_toStartOf="@+id/btnStation3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBackClicked"
        android:padding="20dp"
        android:src="@mipmap/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnPerform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="onPerformClicked"
        android:src="@mipmap/btn_command"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onClearClicked"
        android:padding="12dp"
        android:text="@string/clear_config"
        android:textColor="#FFFFFF"
        app:drawableTopCompat="@mipmap/btn_station_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>