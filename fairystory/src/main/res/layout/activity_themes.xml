<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/stage0001">

    <com.bearya.robot.base.ui.view.FrameSurfaceView
        android:id="@+id/frame_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:onClick="onBackClicked"
        app:srcCompat="@mipmap/btn_back" />

    <View
        android:id="@+id/view1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@null"
        android:tag="mhwh"
        tools:background="#55ff4444" />

    <View
        android:id="@+id/view2"
        android:layout_width="205dp"
        android:layout_height="190dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="65dp"
        android:contentDescription="@null"
        android:tag="qhxb"
        tools:background="#55ff4444" />

    <View
        android:id="@+id/view3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@null"
        android:tag="yxwh"
        tools:background="#55ff4444" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stationEntryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:tag="world" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/my_working"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/working" />

</RelativeLayout>